rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
        // Default open access while testing (change for production)
    match /{document=**} {
      allow read, write: if true;
    }

    // Blogs collection rules
    match /blogs/{blogId} {
      allow read: if true;  // Anyone can read blogs
      allow write: if true;  // Anyone can write blogs
    }

    // Test collections for connection testing
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    match /_test_connection/{document=**} {
      allow read, write: if true;
    }
    match /_test_connection/{document=**} {
      allow read, write: if true;
    }
  }
}
